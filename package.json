{
  "scripts": {
    "start": "react-scripts start",
    "build": "rollup --config rollup.config.js",
    "lint": "eslint --ignore-path .gitignore . --ext ts --ext tsx",
    "prepublish": "yarn build",
    "lint:fix": "yarn lint --fix",
    "upload": "yarn build && np",
    "preview": "np preview",
    "type-check": "tsc"
  },
  "main": "dist/chakra-paginator.js",
  "homepage": "https://github.com/niconiahi/chakra-paginator",
  "name": "chakra-paginator",
  "keywords": [
    "chakra-ui",
    "react",
    "paginator",
    "pagination",
    "chakra-paginator"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:niconiahi/chakra-paginator.git"
  },
  "version": "0.1.2",
  "author": {
    "name": "Nicolas Accetta",
    "email": "nicolas.accetta@gmail.com",
    "url": "https://github.com/niconiahi/"
  },
  "dependencies": {
    "@chakra-ui/core": "^1.0.0-rc.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3"
  },
  "devDependencies": {
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "rollup": "^2.27.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-uglify": "^6.0.4",
    "typescript": "~4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "yarn type-check && lint-staged"
      ]
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "yarn lint:fix"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
